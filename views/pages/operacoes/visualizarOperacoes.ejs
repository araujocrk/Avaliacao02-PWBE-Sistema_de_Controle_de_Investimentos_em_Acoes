<style>
    .hero-gradient {
        background: linear-gradient(135deg, #1e3a8a 0%, #3b82f6 100%);
    }

    .feature-card:hover {
        transform: translateY(-5px);
        box-shadow: 0 10px 25px rgba(0, 0, 0, 0.1);
    }

    .transition-all {
        transition: all 0.3s ease;
    }

    .operation-card:hover {
        transform: translateY(-2px);
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
    }

    .buy-badge {
        background-color: #10b981;
    }

    .sell-badge {
        background-color: #ef4444;
    }

    .chart-container {
        height: 300px;
    }

    @media (min-width: 1024px) {
        .chart-container {
            height: 400px;
        }
    }
</style>
<!-- Header -->
<div class="hero-gradient pt-12 pb-16">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="flex justify-between items-center">
            <div>
                <h1 class="text-3xl font-bold text-white">Minhas Operações</h1>
                <p class="mt-2 mb-3 text-lg text-blue-100">Visualize e gerencie todas as suas operações na B3</p>
            </div>
            <div class="hidden md:block">
                <a href="/operacoes/nova-operacao"
                    class="bg-white hover:bg-blue-50 text-blue-600 px-6 py-3 rounded-lg font-medium flex items-center transition-all">
                    <i class="fas fa-plus mr-2"></i> Nova Operação
                </a>
            </div>
        </div>
        <!-- Operations List -->
        <div class="w-full lg:w-3/4">
            <div class="bg-white shadow rounded-lg overflow-hidden">
                <div class="px-6 py-4 border-b border-gray-200 flex justify-between items-center">
                    <h3 class="text-lg font-medium text-gray-900">Últimas Operações</h3>
                    <div class="flex space-x-3">
                        <button class="text-gray-500 hover:text-gray-700">
                            <i class="fas fa-download"></i>
                        </button>
                        <button class="text-gray-500 hover:text-gray-700">
                            <i class="fas fa-print"></i>
                        </button>
                        <button class="text-gray-500 hover:text-gray-700">
                            <i class="fas fa-ellipsis-v"></i>
                        </button>
                    </div>
                </div>

                <div class="divide-y divide-gray-200">
                    <!-- Operation 1 -->
                    <% for (let op of operacoes) { %>
                        <div class="p-6 hover:bg-gray-50 operation-card transition-all">
                            <div class="flex flex-col md:flex-row md:justify-between md:items-center">
                                <div class="flex items-center mb-4 md:mb-0">
                                    <div class="bg-blue-100 p-3 rounded-full mr-4">
                                        <i class="fas fa-exchange-alt text-blue-600"></i>
                                    </div>
                                    <div>
                                        <p class="text-sm text-gray-500">
                                            ID - <%= op.data.id_operacao %>
                                        </p>
                                        <h4 class="text-lg font-medium text-gray-900">
                                            <%= op.data.ativo %>
                                        </h4>
                                        <p class="text-sm text-gray-500">
                                            <%= op.data.data %>
                                        </p>
                                    </div>
                                </div>
                                <div class="flex flex-col md:items-end">
                                    <span
                                        class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium <%= op.data.tipo_operacao === 'compra' ? 'buy-badge' : 'sell-badge' %> text-white mb-2">
                                        <i
                                            class="fas <%= op.data.tipo_operacao === 'compra' ? 'fas fa-arrow-up' : 'fas fa-arrow-down' %> mr-1"></i>
                                        <%= op.data.tipo_operacao.charAt(0).toUpperCase() +
                                            op.data.tipo_operacao.slice(1) %>
                                    </span>
                                    <div class="grid grid-cols-2 md:grid-cols-4 gap-4">
                                        <div>
                                            <p class="text-sm text-gray-500">Quantidade</p>
                                            <p class="font-medium">
                                                <%= op.data.quantidade %>
                                            </p>
                                        </div>
                                        <div>
                                            <p class="text-sm text-gray-500">Preço</p>
                                            <p class="font-medium">R$ <%= op.data.preco.toFixed(2) %>
                                            </p>
                                        </div>
                                        <div>
                                            <p class="text-sm text-gray-500">Valor Bruto</p>
                                            <p class="font-medium">R$ <%= op.data.valor_bruto.toFixed(2) %>
                                            </p>
                                        </div>
                                        <div>
                                            <p class="text-sm text-gray-500">Taxa B3</p>
                                            <p class="font-medium">R$ <%= op.data.taxa_b3.toFixed(2) %>
                                            </p>
                                        </div>
                                        <div>
                                            <p class="text-sm text-gray-500">Valor Líquido</p>
                                            <p class="font-medium">R$ <%= op.data.valor_liquido.toFixed(2) %>
                                            </p>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <% } %>

                </div>
            </div>
        </div>
    </div>
</div>