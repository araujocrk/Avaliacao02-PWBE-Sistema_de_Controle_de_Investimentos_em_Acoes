<style>
    .radio-card {
        transition: all 0.2s ease;
    }

    .radio-card:hover {
        transform: translateY(-2px);
    }

    .radio-card.selected {
        border-color: #3b82f6;
        background-color: #eff6ff;
    }
</style>
<section class="form-section py-12 min-h-screen">
    <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="text-center mb-10">
            <h1 class="text-3xl font-bold text-gray-800 mb-2">Registrar Nova Operação</h1>
            <p class="text-lg text-gray-600">Preencha os detalhes da sua operação na Bolsa de Valores</p>
        </div>

        <div class="bg-white rounded-xl p-8 form-card">
            <form action="/operacoes/criar-operacao" method="POST" id="operationForm" class="space-y-6">
                <!-- Date Field -->
                <div>
                    <label for="operationDate" class="block text-sm font-medium text-gray-700 mb-1">
                        Data da Operação <span class="text-red-500">*</span>
                    </label>
                    <div class="relative">
                        <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                            <i class="fas fa-calendar-alt text-gray-400"></i>
                        </div>
                        <input type="date" id="operationDate" name="data" required
                            class="pl-10 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 py-2 border">
                    </div>
                </div>

                <!-- Operation Type -->
                <div>
                    <label class="block text-sm font-medium text-gray-700 mb-3">
                        Tipo de Operação <span class="text-red-500">*</span>
                    </label>
                    <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                        <!-- Buy Option -->
                        <label class="radio-card cursor-pointer">
                            <input type="radio" name="tipo_operacao" value="compra" checked class="sr-only peer">
                            <div
                                class="p-4 border-2 border-gray-200 rounded-lg flex items-center peer-checked:border-blue-500 peer-checked:bg-blue-50">
                                <div class="bg-green-100 p-3 rounded-full mr-4">
                                    <i class="fas fa-arrow-up text-green-600"></i>
                                </div>
                                <div>
                                    <h3 class="font-medium text-gray-800">Compra</h3>
                                    <p class="text-sm text-gray-500">Registrar aquisição de ativos</p>
                                </div>
                            </div>
                        </label>

                        <!-- Sell Option -->
                        <label class="radio-card cursor-pointer">
                            <input type="radio" name="tipo_operacao" value="venda" class="sr-only peer">
                            <div
                                class="p-4 border-2 border-gray-200 rounded-lg flex items-center peer-checked:border-blue-500 peer-checked:bg-blue-50">
                                <div class="bg-red-100 p-3 rounded-full mr-4">
                                    <i class="fas fa-arrow-down text-red-600"></i>
                                </div>
                                <div>
                                    <h3 class="font-medium text-gray-800">Venda</h3>
                                    <p class="text-sm text-gray-500">Registrar venda de ativos</p>
                                </div>
                            </div>
                        </label>
                    </div>
                </div>

                <!-- Asset Code -->
                <div>
                    <label for="assetCode" class="block text-sm font-medium text-gray-700 mb-1">
                        Código do Ativo <span class="text-red-500">*</span>
                    </label>
                    <div class="relative">
                        <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                            <i class="fas fa-chart-bar text-gray-400"></i>
                        </div>
                        <input type="text" id="assetCode" name="ativo" required placeholder="Ex: PETR4, VALE3, BBDC4"
                            class="pl-10 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 py-2 border uppercase">
                        <div class="absolute inset-y-0 right-0 pr-3 flex items-center">
                            <span class="text-gray-500 text-sm">B3</span>
                        </div>
                    </div>
                    <p class="mt-1 text-sm text-gray-500">Digite o código do ativo conforme negociado na B3</p>
                </div>

                <!-- Quantity -->
                <div>
                    <label for="quantity" class="block text-sm font-medium text-gray-700 mb-1">
                        Quantidade <span class="text-red-500">*</span>
                    </label>
                    <div class="relative">
                        <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                            <i class="fas fa-boxes text-gray-400"></i>
                        </div>
                        <input type="number" id="quantity" name="quantidade" required min="1" step="1"
                            class="pl-10 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 py-2 border">
                    </div>
                </div>

                <!-- Unit Price -->
                <div>
                    <label for="unitPrice" class="block text-sm font-medium text-gray-700 mb-1">
                        Preço Unitário (R$) <span class="text-red-500">*</span>
                    </label>
                    <div class="relative">
                        <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                            <i class="fas fa-money-bill-wave text-gray-400"></i>
                        </div>
                        <input type="number" id="unitPrice" name="preco" required min="0.01" step="0.01"
                            class="pl-10 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 py-2 border">
                        <div class="absolute inset-y-0 right-0 pr-3 flex items-center pointer-events-none">
                            <span class="text-gray-500">R$</span>
                        </div>
                    </div>
                </div>
                <!-- Form Actions -->
                <div class="flex flex-col sm:flex-row justify-end gap-3 pt-4">
                    <button type="submit"
                        class="px-4 py-2 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500 flex items-center justify-center">
                        <i class="fas fa-save mr-2"></i> Salvar Operação
                    </button>
                </div>
            </form>
        </div>
    </div>
</section>